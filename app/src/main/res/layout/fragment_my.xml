<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:id="@+id/fragment">

    <View
        android:layout_marginTop="9.82dp"
        android:layout_gravity="center"
        android:layout_width="41.23dp"
        android:layout_height="3.93dp"
        android:background="@drawable/bar_style"
        android:layout_marginBottom="16.2dp"/>

    <TextView
        android:layout_marginLeft="15.7dp"
        android:layout_width="match_parent"
        android:layout_height="19.63dp"
        android:id="@+id/head"
        android:textColor="#000000"/>
    <ListView
        android:id="@+id/list_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        />
</LinearLayout>