<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="53dp">
    <TextView
        android:layout_width="30dp"
        android:layout_height="53dp"
        android:layout_marginLeft="15.7dp"
        android:background="@drawable/number_ring"
        android:id = "@+id/text_order_no"
        android:gravity="center"
        android:textSize="17.67sp"
        android:layout_gravity="left|top"
        android:textColor="#000000"/>
    <TextView
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginLeft="9.82dp"
        android:id = "@+id/text_name_no"
        android:textSize="17.67sp"
        android:layout_toRightOf="@id/text_order_no"
        android:textAlignment="center"
        android:textColor="#000000"/>
    <View
        android:id = "@+id/view_line_no"
        android:background="#9B9B9B"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15.7dp"
        android:layout_height="0.49dp" />

</RelativeLayout>
