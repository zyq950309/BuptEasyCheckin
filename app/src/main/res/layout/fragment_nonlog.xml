<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="43.2dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="19.63dp"
            android:textSize="13.74sp"
            android:layout_gravity="center"
            android:text="请登录查看你的报到流程"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/goLogin_btn"
            android:layout_marginTop="14.72dp"
            android:layout_width="228.71dp"
            android:layout_height="46.13dp"
            android:layout_gravity="center_horizontal"
            android:textSize="17.67sp"
            android:background="@drawable/lightbutton_style"
            android:text="去登录"
            android:textColor="#000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="44.17dp"
            />
    </LinearLayout>

</LinearLayout>