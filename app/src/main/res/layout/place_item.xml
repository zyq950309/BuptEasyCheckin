<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="53dp">
    <TextView
        android:layout_width="30dp"
        android:layout_height="53dp"
        android:layout_marginLeft="15.7dp"
        android:background="@drawable/number_ring"
        android:id = "@+id/text_order"
        android:gravity="center"
        android:textSize="17.67sp"
        android:layout_gravity="left|top"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24.54dp"
        android:layout_marginLeft="9.82dp"
        android:layout_marginTop="10.31dp"
        android:id = "@+id/text_name"
        android:textSize="17.67sp"
        android:layout_toRightOf="@id/text_order"
        android:textColor="#000000"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="12.27dp"
        android:id = "@+id/text_detail"
        android:layout_below="@id/text_name"
        android:layout_toRightOf="@id/text_order"
        android:gravity="center_vertical"
        android:textSize="11.78sp"
        android:textColor="#4A4A4A"/>
    <TextView
        android:layout_height="24.54dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="10.31dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17.18dp"
        android:id = "@+id/text_inLine"
        android:gravity="center_vertical"
        android:textSize="11.78sp"


        android:textColor="#F5A623"/>
    <View
        android:id = "@+id/view_line"
        android:background="#9B9B9B"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15.7dp"
        android:layout_height="0.49dp" />

</RelativeLayout>
