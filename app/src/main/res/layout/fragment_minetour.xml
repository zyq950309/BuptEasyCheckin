<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <Button
            android:text="关于我们"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/about1_button"
            android:layout_above="@+id/setting1_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#9D9D9D" />

        <Button
            android:text="设置"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/setting1_button"
            android:layout_marginBottom="122dp"
            android:backgroundTint="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#9D9D9D"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="283dp"
            android:layout_height="180dp"
            android:background="@drawable/info_style"
            android:weightSum="1"
            android:layout_above="@+id/about1_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp">

            <Button
                android:text="去登录"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/tologin_button"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="43dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="请登录查看你的个人信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                tools:text="请登录查看你的个人信息"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="#000000"
                android:layout_weight="0.47"
                android:layout_marginBottom="25dp"
                android:layout_above="@+id/tologin_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#9D9D9D"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>