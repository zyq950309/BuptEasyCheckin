<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="bupt.com.bupte.LoginActivity">

    <Button
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#999999"
        android:id="@+id/login_button"
        android:backgroundTint="#363636" />

    <Button
        android:text="游客模式"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_alignRight="@+id/login_button"
        android:layout_alignEnd="@+id/login_button"
        android:layout_marginTop="14dp"
        android:id="@+id/tour_button"
        android:backgroundTint="#FFFFFF" />

    <TextView
        android:text="姓名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView"
        android:layout_below="@+id/school_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#000000" />

    <TextView
        android:text="身份证"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_below="@+id/name_input"
        android:layout_alignLeft="@+id/id_input"
        android:layout_alignStart="@+id/id_input"
        android:layout_marginTop="11dp"
        android:textStyle="normal|bold"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:id="@+id/line1"
        android:layout_below="@+id/id_input"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:id="@+id/line2"
        android:layout_below="@+id/name_input" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="14"
        android:maxLength="12"
        android:id="@+id/name_input"
        android:textSize="14sp"
        android:background="@null"
        android:hint="请输入身份证上的姓名"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="14"
        android:maxLength="21"
        android:id="@+id/id_input"
        android:textSize="14sp"
        android:background="@null"
        android:hint="请输入18位身份证号"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/nameclear_button"
        android:background="@drawable/clear"
        android:layout_alignBottom="@+id/name_input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/idclear_button"
        android:background="@drawable/clear"
        android:layout_above="@+id/line1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_school"
        android:id="@+id/school_icon"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/nameclear_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
