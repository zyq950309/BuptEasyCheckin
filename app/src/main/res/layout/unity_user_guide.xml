<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#801E1E1E">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="31.9dp"
        android:text="校园沙盘探索攻略"
        android:textColor="#FFFFFF"
        android:textSize="22.58sp"
        android:textAlignment="center"
        android:layout_marginTop="74.11dp"
        android:id="@+id/uesr_guide_title"/>
    <Button
        android:layout_width="117.79dp"
        android:layout_height="35.34dp"
        android:layout_marginTop="9.82dp"
        android:background="@drawable/user_guide_button_style"
        android:text="朕知道了"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13.74dp"
        android:layout_below="@id/uesr_guide_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/user_guide_button"/>
    <RelativeLayout
        android:id="@+id/unity_relative_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_guide_button"
        android:layout_marginTop="62.58dp"
        android:layout_marginLeft="75.15dp"
        android:layout_marginRight="75.15dp">
        <RelativeLayout
            android:id="@+id/unity_relative1"
            android:layout_width="match_parent"
            android:layout_height="93dp">
            <ImageView
                android:layout_width="55.8dp"
                android:layout_height="55.8dp"
                android:src="@drawable/slide_updown"
                android:id="@+id/img_slide_up"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="55.8dp"
                android:layout_height="wrap_content"
                android:text="上下滑动\n移动视角"
                android:lineSpacingMultiplier="1.2"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="13.74dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/img_slide_up"
                android:id="@+id/text_slide_up"/>
            <ImageView
                android:layout_width="55.8dp"
                android:layout_height="55.8dp"
                android:src="@drawable/slide_updown"
                android:rotation="90"
                android:id="@+id/img_slide_left"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_width="55.8dp"
                android:layout_height="wrap_content"
                android:text="左右滑动\n旋转视角"
                android:lineSpacingMultiplier="1.2"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="13.74dp"
                android:layout_below="@id/img_slide_left"
                android:id="@+id/text_slide_left"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/unity_relative2"
            android:layout_below="@id/unity_relative1"
            android:layout_width="match_parent"
            android:layout_marginTop="33.32dp"
            android:layout_height="93dp">
            <ImageView
                android:layout_width="55.8dp"
                android:layout_height="55.8dp"
                android:src="@drawable/slide_outin"
                android:id="@+id/img_slide_out"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="55.8dp"
                android:layout_height="wrap_content"
                android:text="两指捏和\n缩放沙盘"
                android:lineSpacingMultiplier="1.2"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="13.74dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/img_slide_out"
                android:id="@+id/text_slide_out"/>
            <ImageView
                android:layout_width="55.8dp"
                android:layout_height="55.8dp"
                android:src="@drawable/slide_twofinger"
                android:rotation="90"
                android:id="@+id/img_slide_tf"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_width="55.8dp"
                android:layout_height="wrap_content"
                android:text="两指滑动\n移动沙盘"
                android:lineSpacingMultiplier="1.2"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="13.74dp"
                android:layout_below="@id/img_slide_tf"
                android:id="@+id/text_slide_tf"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="61.84dp"
            android:text="彩蛋开关"
            android:textColor="#FFFFFF"
            android:textSize="13.74dp"
            android:layout_below="@id/unity_relative2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="33.37dp"
        android:layout_height="33.37dp"
        android:src="@drawable/arrow_orange"
        android:layout_below="@id/unity_relative_images"
        android:scaleType="centerInside"
        android:layout_marginRight="48.83dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>